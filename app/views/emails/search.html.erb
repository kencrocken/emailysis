<% if !@my_emails.empty? %>
  <% @my_emails.each do |msg| %>
    <div class = "row">
      <div class = "col-md-12">
        <ul class = "list-inline">
          <li>ID : <%= link_to msg.id, email_path(msg.id) %></li>
          <li><%= "From : #{msg.from}" %></li>
          <li><%= "Date : #{msg.sent_at}" %></li>
          <li><%= "Subject: #{msg.subject}" %></li>
          <li><%= "Project ID : #{msg.project.name}" %></li>
        </ul>
      </div>
    </div>
  <% end %>
<% else %>
  <h3>Your search returned no results.</h3>
<% end %>