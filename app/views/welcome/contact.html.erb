<h2>Contact</h2>
<div class="container">
  <%= form_tag send_mail_path, :novalidate => "novalidate" do %>
    <div class="form-horizontal">
      <div class="form-group">
        <%= label_tag 'name', 'Name', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= text_field_tag "message[name]", nil, class: 'form-control', placeholder: 'Your Name', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag 'email', 'Email', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= email_field_tag "message[email]", nil, class: 'form-control', placeholder: 'Your Email Address', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag 'comments', 'Comments', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= text_area_tag "message[comments]", nil, class: 'form-control', rows: 4, placeholder: 'Comments...' %>
        </div>
      </div>
      <%= submit_tag nil, class: 'btn btn-info pull-right' %>
    </div>
  <% end %>
</div>